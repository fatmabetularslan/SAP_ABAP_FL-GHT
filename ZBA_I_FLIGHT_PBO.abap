*&---------------------------------------------------------------------*
*& Module CHECKIN OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE checkin OUTPUT.
  LOOP AT SCREEN.
    IF screen-group1 EQ 'GR1'.
      IF gv_open_gr1 = abap_true.
        screen-input = '0'.
        screen-active = '1'.
      ELSE.
        screen-input = '0'.
        screen-active = '0'.
      ENDIF.
      IF screen-name = 'BOOKFLIGHT'.
        screen-input = '1'.
      ENDIF.
      MODIFY SCREEN.
    ENDIF.
  ENDLOOP.
ENDMODULE.
